$('#answer_type').html("<%= escape_javascript(render :partial => params[:type].underscore) %>")

var name = $('#question_category_id').attr('name')
$('#question_category_id').attr('name', name.replace(name.substr(0,name.indexOf("[")), "<%= params[:type].underscore %>"))

name = $('#question_level').attr('name')
$('#question_level').attr('name', name.replace(name.substr(0,name.indexOf("[")), "<%= params[:type].underscore %>"))

name = $('#question_body').attr('name')
$('#question_body').attr('name', name.replace(name.substr(0,name.indexOf("[")), "<%= params[:type].underscore %>"))

name = $('#question_provider').attr('name')
$('#question_provider').attr('name', name.replace(name.substr(0,name.indexOf("[")), "<%= params[:type].underscore %>"))

var types = $('.question_type')
for(var i = 0; i <= types.length; i++) {
  name = $(types[i]).attr('name');
  $(types[i]).attr('name', name.replace(name.substr(0,name.indexOf("[")), "<%= params[:type].underscore %>"))
}


