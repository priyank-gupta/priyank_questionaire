<%= form_for(@question) do |f| %>

    <%= render "question", :f => f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script>

$(document).ready(change_answer_div("<%= @type %>"));

function change_answer_div(val) {
  if ("<%= !@question.new_record? %>") {
    var id = "<%= params[:id] %>";
  } else {
    var id = null;
  }
  if (val == "Subjective") {
    $("#for_option").addClass("hide");
    $("#for_option_error").addClass("hide");
  } else {
    $("#for_option").removeClass("hide");
    $("#for_option_error").removeClass("hide");
  }
   $.ajax({
    url: '<%= change_answer_div_path %>', 
    dataType: 'script',
    type: 'get', 
    data: 'type='+val+"&id="+id
  });
}

$("#question_tag").autoSuggest("/ques_tags.js", {minChars: 1, matchCase: false, searchObjProps: "name", startText: "Enter Tags Here", asHtmlID:"tags",  neverSubmit: true, preFill: "<%= @question.tag_list %>"});

</script>
