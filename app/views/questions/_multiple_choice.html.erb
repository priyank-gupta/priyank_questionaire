
<% (OPTIONS_RANGE[:min]..OPTIONS_RANGE[:max]).each do |index| %>
  
  <%= text_field_tag "question[options_attributes][#{index}][body]", @question.try(:options)[index-1].try(:body) %>&nbsp;&nbsp;&nbsp;&nbsp;
  <%= radio_button_tag "answer", value = index, @question.try(:options)[index-1].try(:answer) || index == 1 %><br/>
  
  <% if @question.try(:options)[index-1] %>
  
    <%= hidden_field_tag "question[options_attributes][#{index}][id]", @question.try(:options)[index-1].try(:id) %>
    <%= hidden_field_tag "question[options_attributes][#{index}][_destroy]", false %>
    
  <% end %>
  
  <%= hidden_field_tag "question[options_attributes][#{index}][answer]", false %>
  
<% end %>
